<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_cart_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#1515CD"
        android:gravity="center_horizontal"
        android:text="布朗熊与可妮"></TextView>

    <TextView
        android:id="@+id/tv_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/iv_sub"
        android:gravity="center_horizontal"
        android:text="¥500"
        android:textColor="#f00"></TextView>

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/car_add"></ImageView>

    <TextView
        android:id="@+id/tv_cart_num"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/iv_add"
        android:gravity="center_horizontal"
        android:text="15"></TextView>

    <ImageView
        android:id="@+id/iv_sub"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/tv_cart_num"
        android:src="@drawable/car_minus"></ImageView>

</RelativeLayout>