<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_food_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"></de.hdodenhof.circleimageview.CircleImageView>


    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/iv_food_pic"
        android:text="双人牛排套餐"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/tv_food_desc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_food_name"
        android:layout_alignLeft="@id/tv_food_name"
        android:background="#fff"
        android:text="好评如潮"
        android:textColor="#51ACDD"></TextView>

    <TextView
        android:id="@+id/tv_sale_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_food_desc"
        android:layout_alignLeft="@id/tv_food_name"
        android:layout_marginTop="5dp"
        android:text="月销售:500"
        android:textColor="#D83E3E"></TextView>

    <TextView
        android:id="@+id/tv_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sale_num"
        android:layout_alignLeft="@id/tv_food_name"
        android:layout_marginTop="5dp"
        android:text="￥575.0"
        android:textColor="#A737C6"></TextView>

    <TextView
        android:id="@+id/tv_add_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/add"
        android:gravity="center"
        android:textColor="#fff"></TextView>
</RelativeLayout>